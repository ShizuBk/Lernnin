<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cursos.CursosFragment" >

    <Button
        android:id="@+id/buttonFP"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_marginTop="190dp"
        android:text="@string/fundamentos_basicos"
        android:backgroundTint="#4FBFEF"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonCP"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:text="@string/conceptos_de_programacion"
        android:backgroundTint="#4FBFEF"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonFP" />

    <Button
        android:id="@+id/buttonEC"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:text="@string/estructuras_de_control"
        android:backgroundTint="#4FBFEF"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCP" />

    <!--Button
        android:id="@+id/buttonExamen"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_marginTop="190dp"
        android:backgroundTint="#A7EACD"
        android:text="@string/examen_de_colocacion"
        android:textColor="#0E0E0E"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCP" /-->
</androidx.constraintlayout.widget.ConstraintLayout>
